{
	"name": "php-refactor-tool",
	"displayName": "PHP Refactor Tool",
	"description": "Make the code refactor easier.",
	"version": "0.4.2",
	"publisher": "st-pham",
	"author": {
		"name": "Son Tung PHAM",
		"email": "tungps88@gmail.com"
	},
	"keywords": [
		"refactor",
		"rename"
	],
	"license": "MIT",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:php"
	],
	"extensionDependencies": [
		"bmewburn.vscode-intelephense-client"
	],
	"contributes": {
		"languages": [
			{
				"id": "php",
				"extensions": [
					".php"
				]
			}
		]
	},
	"main": "./out/src/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run test",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint && cp -Rf ./test-fixtures/fixture/* ./test-fixtures/test-workspace/",
		"test": "node ./out/test/runTest.js",
		"posttest": "rm -f ./test-fixtures/test-workspace/*.php"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^8.2.3",
		"@types/node": "^12.20.37",
		"@types/vscode": "^1.62.0",
		"@typescript-eslint/eslint-plugin": "^4.33.0",
		"@typescript-eslint/parser": "^4.33.0",
		"eslint": "^7.32.0",
		"glob": "^7.2.0",
		"mocha": "^8.4.0",
		"typescript": "^4.5.2",
		"vscode-test": "^1.6.1"
	},
	"dependencies": {
		"fp-ts": "^2.11.5"
	}
}
